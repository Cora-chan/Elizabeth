{% if section.settings.video_url != blank %}
  <section class="relative w-full overflow-hidden text-white">
    <div class="absolute inset-0 z-10 flex flex-col items-center justify-center px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">{{ section.settings.heading }}</h1>
      <p class="mt-2 text-lg md:text-xl">{{ section.settings.subheading }}</p>
    </div>
    <video
      class="w-full h-auto object-cover"
      autoplay
      muted
      loop
      playsinline
      preload="auto"
    >
      <source src="{{ section.settings.video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </section>
{% endif %}

{% schema %}
{
  "name": "Master Banner",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our latest collection"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Master Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
