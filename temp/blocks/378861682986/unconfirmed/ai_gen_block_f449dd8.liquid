{% doc %}
  @prompt
    generate an full size banner to play a demo video.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height }}px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-video-banner__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-video-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 16px 24px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      rgba(0, 0, 0, {{ block.settings.overlay_opacity }}),
      rgba(0, 0, 0, {{ block.settings.overlay_opacity }})
    );
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 24px;
    z-index: 2;
  }

  .ai-video-banner__content-{{ ai_gen_id }} {
    text-align: center;
    color: {{ block.settings.text_color }};
    max-width: 800px;
    padding: 0 20px;
  }

  .ai-video-banner__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-video-banner__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 32px;
    line-height: 1.5;
  }

  .ai-video-banner__play-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.play_button_size }}px;
    height: {{ block.settings.play_button_size }}px;
    background-color: {{ block.settings.play_button_color }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .ai-video-banner__play-button-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.4);
  }

  .ai-video-banner__play-button-{{ ai_gen_id }}:focus {
    outline: 3px solid {{ block.settings.text_color }};
    outline-offset: 4px;
  }

  .ai-video-banner__play-icon-{{ ai_gen_id }} {
    width: calc({{ block.settings.play_button_size }}px * 0.4);
    height: calc({{ block.settings.play_button_size }}px * 0.4);
    color: {{ block.settings.play_button_icon_color }};
    margin-left: 4px;
  }

  .ai-video-banner__modal-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .ai-video-banner__modal-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-video-banner__modal-content-{{ ai_gen_id }} {
    position: relative;
    width: 90%;
    max-width: 1200px;
    aspect-ratio: 16 / 9;
    background-color: #000;
  }

  .ai-video-banner__modal-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
  }

  .ai-video-banner__close-button-{{ ai_gen_id }} {
    position: absolute;
    top: -50px;
    right: 0;
    background: none;
    border: none;
    color: white;
    font-size: 24px;
    cursor: pointer;
    padding: 10px;
    z-index: 1001;
  }

  .ai-video-banner__close-button-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-video-banner__close-button-{{ ai_gen_id }}:focus {
    outline: 2px solid white;
    outline-offset: 2px;
  }

  @media screen and (max-width: 768px) {
    .ai-video-banner-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height | times: 0.7 }}px;
    }

    .ai-video-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-video-banner__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-video-banner__play-button-{{ ai_gen_id }} {
      width: {{ block.settings.play_button_size | times: 0.8 }}px;
      height: {{ block.settings.play_button_size | times: 0.8 }}px;
    }

    .ai-video-banner__play-icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.play_button_size | times: 0.8 }}px * 0.4);
      height: calc({{ block.settings.play_button_size | times: 0.8 }}px * 0.4);
    }

    .ai-video-banner__modal-content-{{ ai_gen_id }} {
      width: 95%;
    }

    .ai-video-banner__close-button-{{ ai_gen_id }} {
      top: -40px;
      font-size: 20px;
    }
  }
{% endstyle %}

<video-banner-{{ ai_gen_id }}
  class="ai-video-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_video %}
    <video
      class="ai-video-banner__video-{{ ai_gen_id }}"
      autoplay
      muted
      loop
      playsinline
      preload="metadata"
    >
      <source src="{{ block.settings.background_video }}" type="video/mp4">
    </video>
  {% else %}
    <div class="ai-video-banner__placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-video-banner__empty-state-{{ ai_gen_id }}">
        Add a background video to get started
      </div>
    </div>
  {% endif %}

  <div class="ai-video-banner__overlay-{{ ai_gen_id }}">
    <div class="ai-video-banner__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-video-banner__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-video-banner__description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.demo_video %}
        <button
          class="ai-video-banner__play-button-{{ ai_gen_id }}"
          aria-label="Play demo video"
          data-video-url="{{ block.settings.demo_video }}"
        >
          <svg
            class="ai-video-banner__play-icon-{{ ai_gen_id }}"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M8 5v14l11-7z"/>
          </svg>
        </button>
      {% endif %}
    </div>
  </div>

  <div class="ai-video-banner__modal-{{ ai_gen_id }}" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="ai-video-banner__modal-content-{{ ai_gen_id }}">
      <button
        class="ai-video-banner__close-button-{{ ai_gen_id }}"
        aria-label="Close video"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        </svg>
      </button>
      <video
        class="ai-video-banner__modal-video-{{ ai_gen_id }}"
        controls
        preload="none"
      >
      </video>
    </div>
  </div>
</video-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.playButton = this.querySelector('.ai-video-banner__play-button-{{ ai_gen_id }}');
        this.modal = this.querySelector('.ai-video-banner__modal-{{ ai_gen_id }}');
        this.modalVideo = this.querySelector('.ai-video-banner__modal-video-{{ ai_gen_id }}');
        this.closeButton = this.querySelector('.ai-video-banner__close-button-{{ ai_gen_id }}');

        if (this.playButton) {
          this.setupEventListeners();
        }
      }

      setupEventListeners() {
        this.playButton.addEventListener('click', () => {
          this.openModal();
        });

        this.closeButton.addEventListener('click', () => {
          this.closeModal();
        });

        this.modal.addEventListener('click', (e) => {
          if (e.target === this.modal) {
            this.closeModal();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeModal();
          }
        });
      }

      openModal() {
        const videoUrl = this.playButton.dataset.videoUrl;
        if (videoUrl) {
          this.modalVideo.src = videoUrl;
          this.modal.classList.add('active');
          this.modal.setAttribute('aria-hidden', 'false');
          document.body.style.overflow = 'hidden';
          this.closeButton.focus();
        }
      }

      closeModal() {
        this.modal.classList.remove('active');
        this.modal.setAttribute('aria-hidden', 'true');
        this.modalVideo.pause();
        this.modalVideo.src = '';
        document.body.style.overflow = '';
        this.playButton.focus();
      }
    }

    customElements.define('video-banner-{{ ai_gen_id }}', VideoBanner{{ ai_gen_id }});
  })();
</script>

